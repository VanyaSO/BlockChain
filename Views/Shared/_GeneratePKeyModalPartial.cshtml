<div class="modal fade" id="keyModal" tabindex="-1" aria-labelledby="keyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">

            <div class="modal-header bg-dark text-white border-0">
                <h5 class="modal-title fw-semibold" id="keyModalLabel">Private Key</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <small class="text-muted fw-semibold">Your Private Key</small>
                    <button type="button"
                            id="copyBtn"
                            class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1 px-3 py-1 rounded-3"
                            onclick="copyPrivateKey()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3z"/>
                        </svg>
                        <span>Copy</span>
                    </button>
                </div>

                <textarea id="privateKeyBox"
                          class="form-control bg-light border rounded-3 shadow-sm p-3"
                          rows="16"
                          style="font-family: 'Courier New', monospace; font-size: 0.9rem; resize: none;"
                          readonly></textarea>

                <p class="mt-3 text-danger small text-center mb-0">
                    ⚠️ Never share this private key. Lost keys cannot be recovered.
                </p>
            </div>

            <div class="modal-footer border-0 pt-0 pb-4">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success px-4" onclick="generatePrivateKey()">Generate</button>
            </div>

        </div>
    </div>
</div>

<script>
    async function generatePrivateKey() {
        try {
            const response = await fetch('/BlockChain/GenerateKey/');
            if (!response.ok) throw new Error('HTTP ' + response.status);
            const key = await response.text();

            document.getElementById('privateKeyBox').value = key || 'Error: no key received.';
        } catch (err) {
            document.getElementById('privateKeyBox').value = 'Error: ' + err.message;
        }
    }

    async function copyPrivateKey() {
        const textarea = document.getElementById('privateKeyBox');
        const btn = document.getElementById('copyBtn');

        if (!textarea || !textarea.value.trim()) return;

        try {
            await navigator.clipboard.writeText(textarea.value);

            btn.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                </svg>
                <span>Copied!</span>
            `;
            btn.classList.replace('btn-outline-secondary', 'btn-success');

            setTimeout(() => {
                btn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3z"/>
                    </svg>
                    <span>Copy</span>
                `;
                btn.classList.replace('btn-success', 'btn-outline-secondary');
            }, 2000);
        } catch (e) {
            alert('Clipboard not supported.');
            console.error(e);
        }
    }
</script>
